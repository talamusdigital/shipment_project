{# templates/shipment/list.index.html.twig #}
{% block stylesheets %}
    {# Bootstrap CSS dosyasını uzak sunucudan çekin #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad Soyad</th>
            <th>Status</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        {% for shipment in shipments %}
            <tr>
                <td>{{ shipment.id }}</td>
                <td>{{ shipment.fullName }}</td>
                <td>{{ shipment.status }}</td>
                <td>
                    <a href="{{ path('toggle_status', {'id': shipment.id, 'action': 'activate'}) }}">
                        Aktif Et
                    </a>
                    <a href="{{ path('toggle_status', {'id': shipment.id, 'action': 'deactivate'}) }}">
                        Pasif Et
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
