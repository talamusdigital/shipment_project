{# templates/shipment/create.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Kargo Oluştur{% endblock %}
{% block stylesheets %}
    {# Bootstrap CSS dosyasını uzak sunucudan çekin #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}
{% block body %}
    <h1>Kargo Oluştur</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.full_name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.cargo_info, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.destination_country, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" class="btn btn-primary">Gönderi Oluştur</button>
    {{ form_end(form) }}
{% endblock %}
